#!/bin/bash
# This hook is sourced after every virtualenv is activated.

# Set up the prompt to show useful git status information.
source ~/bin/git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWUPSTREAM="auto"
export GIT_PS1_SHOWCOLORHINTS=1
# export PS1='[\u@\h \W$(__git_ps1 " (%s)")]\$ '
# export PS1='\w$(__git_ps1 " (%s)")\$ '
 #PROMPT_COMMAND='__git_ps1 "\u@\h:\w" "\\\$ "'
#PROMPT_COMMAND='__git_ps1 "\w" "\\\$ "'


if [ "$color_prompt" = yes ]; then
    if [ -n "$VIRTUAL_ENV" ]; then
        PS1='${debian_chroot:+($debian_chroot)}(`basename $VIRTUAL_ENV`)\[\033[33m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
        PROMPT_COMMAND='__git_ps1 "${debian_chroot:+($debian_chroot)}(`basename $VIRTUAL_ENV`)\[\033[33m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]" "\\\$ "'
    else
        PS1='${debian_chroot:+($debian_chroot)}\[\033[33m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
    fi
else
    echo "post cp else"
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
#unset color_prompt force_color_prompt


